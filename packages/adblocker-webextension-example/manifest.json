{
  "description": "A minimal adblocker",
  "manifest_version": 2,
  "name": "minimal-adblocker",
  "version": "1.0",
  "homepage_url": "https://github.com/cliqz-oss/adblocker",
  "icons": {
    "48": "cliqz.png"
  },
  "permissions": [
    "webNavigation",
    "webRequest",
    "webRequestBlocking",
    "tabs",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": [
      "dist/background.iife.js"
    ]
  },
  "browser_action": {
    "default_title": "Minimal adblocker"
  },
  "content_scripts": [
    {
      "match_about_blank": true,
      "all_frames": true,
      "js": [
        "dist/content-script.iife.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "run_at": "document_start"
    }
  ]
}
